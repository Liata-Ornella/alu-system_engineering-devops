#!/usr/bin/env bash
# Script to install and configure Nginx for Holberton School project

# Update package list and install Nginx
apt-get update -y
apt-get install nginx -y

# Start Nginx service (without systemctl)
service nginx start

# Ensure default Nginx site listens on port 80 (default is usually fine)
sed -i 's/listen 80 default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default

# Replace default index page with Holberton School message
echo "Holberton School for the win!" > /var/www/html/index.html

# Restart Nginx to load new content
service nginx restart

# Optional: ensure firewall allows HTTP (port 80)
if command -v ufw >/dev/null 2>&1; then
    ufw allow 'Nginx HTTP'
fi
