#!/usr/bin/env bash
# Fully compliant Holberton web server setup script

# Update package list
apt-get update -y

# Install Nginx
apt-get install nginx -y

# Start Nginx service (without systemctl)
service nginx start

# Ensure default Nginx site listens on port 80
sed -i 's/listen 80 default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80 default_server;/listen [::]:80 default_server;/' /etc/nginx/sites-available/default

# Replace default index page with exact message
echo -n "Holberton School for the win!" > /var/www/html/index.html

# Restart Nginx to apply changes
service nginx restart

# Allow HTTP traffic through firewall if ufw exists
if command -v ufw >/dev/null 2>&1; then
    ufw allow 'Nginx HTTP'
fi
