#!/usr/bin/env bash
# Holberton compliant Nginx web server script

# Update packages
apt-get update -y

# Install Nginx
apt-get install nginx -y

# Start Nginx service
service nginx start

# Replace default index page with exactly "Holberton School"
printf "Holberton School" > /var/www/html/index.html

# Ensure default server block listens on port 80
sed -i 's/listen 80 default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80 default_server;/listen [::]:80 default_server;/' /etc/nginx/sites-available/default

# Restart Nginx
service nginx restart
